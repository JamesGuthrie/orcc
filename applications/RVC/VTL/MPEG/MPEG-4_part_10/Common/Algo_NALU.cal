actor Algo_NALU ()
		uint(size = 8) bits8
			==>
		uint(size = 8) RbspByte,
		bool           NewNal
			:


/*
*
* State variables
*
*/

	uint(size = 8) fifo_lsb := 0;
	uint(size = 8) fifo_msb := 0;


/*
*
* Actions
*
*/

	fill_fifo: action 
			bits8:[b]
				==>
		do
			fifo_msb   := fifo_lsb;
			fifo_lsb   := b;
		end /* fill_fifo */



	Pattern.Is003Bytes: action
			bits8:[b]
				==>
			RbspByte :[  0  ,  0  ],
			NewNal   :[false,false]
		guard
			(fifo_msb = 0) and (fifo_lsb = 0)  and  (b = 3)
		end 


	Pattern.Is001Bytes: action
			bits8:[b]
				==>
			NewNal     :[true]
		guard
			(fifo_msb = 0) and (fifo_lsb = 0)  and  (b = 1)
		end

	NoPattern: action
			bits8:[b]
				==>
			RbspByte :[ValRbsp],
			NewNal   :[false]
		guard
			not( (fifo_msb = 0) and (fifo_lsb = 0)  and  ((b = 3) or (b = 1)) )
		var
			uint(size=8) ValRbsp
		do
			ValRbsp  := fifo_msb;
			fifo_msb := fifo_lsb;
			fifo_lsb := b;
		end


/*
*
* Scheduler
*
*/

	schedule fsm fill_fifo1:
		fill_fifo1 (fill_fifo )--> fill_fifo2;

		fill_fifo2 (fill_fifo )--> fifo_full;
	
		fifo_full  (NoPattern )--> fifo_full;
		fifo_full  (Pattern   )--> fill_fifo1;
	end

	priority
		NoPattern > Pattern.Is001Bytes > Pattern.Is003Bytes;
	end /* priority */

end /* actor */
