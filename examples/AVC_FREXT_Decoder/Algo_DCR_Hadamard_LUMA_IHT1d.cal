import all caltrop.lib.BitOps;

actor Algo_DCR_Hadamard_LUMA_IHT1d ( int SAMPLE_SZ ) int(size=SAMPLE_SZ) X ==> int(size=SAMPLE_SZ) Y :

  action X:[x] repeat 4 ==> Y:[ y[0], y[1], y[2], y[3]]
  var
   List( type:int(size=SAMPLE_SZ), size=4 ) buf,
   List( type:int(size=SAMPLE_SZ), size=4 ) y
  do
    buf := [
      x[0] + x[2],
      x[0] - x[2],
      x[1] - x[3],
      x[1] + x[3]
    ];

    y :=[
      buf[0] + buf[3],
      buf[1] + buf[2],
      buf[1] - buf[2],
      buf[0] - buf[3]
    ];
  end

end
