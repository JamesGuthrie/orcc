<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
              class="net.sf.orcc.CalExecutableExtensionFactory:org.eclipse.xtext.ui.core.editor.XtextEditor"
              contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
              default="true"
              extensions="cal"
              icon="icons/orcc_run.gif"
              id="net.sf.orcc.Cal"
              name="Cal Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="net.sf.orcc.CalExecutableExtensionFactory:org.eclipse.xtext.ui.common.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.common.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="net.sf.orcc.Cal.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="net.sf.orcc.CalExecutableExtensionFactory:org.eclipse.xtext.ui.core.editor.handler.ValidateActionHandler"
            commandId="net.sf.orcc.Cal.validate">
         <activeWhen>
            <reference
                    definitionId="net.sf.orcc.Cal.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="net.sf.orcc.Cal.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.core.editor.XtextEditor.languageName" 
                        value="net.sf.orcc.Cal" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="net.sf.orcc.CalExecutableExtensionFactory:org.eclipse.xtext.ui.core.editor.preferences.LanguageRootPreferencePage"
            id="net.sf.orcc.Cal"
            name="Cal"
            category="org.eclipse.xtext.languages">
            <keywordReference id="net.sf.orcc.ui.keyword_Cal"/>
        </page>
        <page
            category="net.sf.orcc.Cal"
            class="net.sf.orcc.CalExecutableExtensionFactory:org.eclipse.xtext.ui.common.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="net.sf.orcc.Cal.coloring"
            name="Syntax Coloring">
            <keywordReference id="net.sf.orcc.ui.keyword_Cal"/>
        </page>
        <page
            category="net.sf.orcc.Cal"
            class="net.sf.orcc.CalExecutableExtensionFactory:org.eclipse.xtext.ui.common.editor.templates.XtextTemplatePreferencePage"
            id="net.sf.orcc.Cal.templates"
            name="Templates">
            <keywordReference id="net.sf.orcc.ui.keyword_Cal"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="net.sf.orcc.ui.keyword_Cal"
            label="Cal"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="net.sf.orcc.Cal.validate"
            name="Validate">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.open">
             <command
                 commandId="net.sf.orcc.Cal.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="net.sf.orcc.Cal.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="net.sf.orcc.CalExecutableExtensionFactory:org.eclipse.xtext.resource.XtextResourceFactory"
			type="cal">
		</parser>
	</extension>




</plugin>
