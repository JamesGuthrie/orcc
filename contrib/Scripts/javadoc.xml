<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!-- From orcc_src : ant -f orcc/contrib/Scripts/javadoc.xml -Declipse.dir=/opt/eclipse-juno -Dplugins.dir=autobuild/build.dir.testing/plugins -Ddest.dir=javadoc -->

<project default="javadoc">

	<!-- This ant build file use "ant-contrib" library. See http://ant-contrib.sourceforge.net/
	or simply install it with your system package manager -->
	<taskdef resource="net/sf/antcontrib/antcontrib.properties" />

    <target name="javadoc">
		<if>
			<not>
				<or>
					<isset property="eclipse.dir" />
					<isset property="plugins.dir" />
					<isset property="dest.dir" />
				</or>
			</not>
			<then>
				<fail>You must specify properties eclipse.dir, orcc.dir and dest.dir</fail>
			</then>
		</if>

        <javadoc
        	doctitle="Orcc javadoc" 
			classpath="${eclipse.dir}/plugins/**"
			destdir="${dest.dir}"
			splitindex="true"
        	nodeprecated="false" nodeprecatedlist="false" noindex="false" nonavbar="false" notree="false" source="1.6"
        	access="public" author="true" use="true" version="true">
	        	<fileset dir="${plugins.dir}" defaultexcludes="yes">
					<include name="**/src/**/*.java" />
					<include name="**/src-gen/**/*.java" />
					<include name="**/xtend-gen/**/*.java" />
				</fileset>
        </javadoc>
    </target>
</project>
