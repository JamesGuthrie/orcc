<?xml version="1.0" encoding="UTF-8"?>
<Settings>
   <!-- the folder where Cal2C should look for files -->
   <ModelPath value="."/>
   
   <!-- the folder where output files will be placed -->
   <OutputDir value="../output/networks"/>
   
   <!-- the input file (name is relative) -->
   <InputFile name="network01.xdf"/>

   <!-- parameters -->
   <Parameters/>

   <!-- code generation policies (at least one) -->
   <GenerateCode language="C">
     <For name=".*"/>
     <Except>
        <For name="source"/>
        <For name="sink"/>
     </Except>
   </GenerateCode>
   
   <!-- additional options go here -->
   <!-- <PrintCFG>
     <For name="my_actor"/>
   </PrintCFG> -->
   
   <KeepIntermediateFiles>
     <For name=".*"/>
   </KeepIntermediateFiles>
</Settings>
