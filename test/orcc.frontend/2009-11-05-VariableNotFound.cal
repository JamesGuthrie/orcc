// XFAIL: in procedure Y, variable "source" does not exist

// this makes sure that scopes are properly popped from the stack

actor Actor () ==> :

  procedure X(int source)
  var
    int target := source + 1
  begin
    target := target + 1;
  end

  procedure Y()
  var
    int target := source + 1
  begin
    target := target + 1;
  end

end
