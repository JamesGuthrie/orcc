
%op InstAssign assign( target : Var, source : Expression ) {
	is_fsym(t) {$t instanceof InstAssign }
	get_slot(target,t) {((InstAssign)$t).getTarget().getVar() }
	get_slot(source,t) {((InstAssign)$t).getSource() }
	make(_target, _value) {
		net.sf.orcc.ir.IrFactory.eINSTANCE.createInstAssign($_target, $_value)
	}
}

