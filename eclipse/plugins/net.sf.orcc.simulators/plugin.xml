<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="simulators" name="simulators" schema="schema/simulators.exsd"/>
   <extension
         point="net.sf.orcc.core.options">
      <option
            defaultValue="false"
            description="Enable tracing feature of a simulator"
            id="net.sf.orcc.simulators.enableTraces"
            name="Enable Traces">
         <checkBox>
            <option
                  description="An other output folder for receiving simulator trace files"
                  id="net.sf.orcc.simulators.tracesFolder"
                  name="Traces folder">
               <browseFile
                     folder="true"
                     workspace="false">
               </browseFile>
            </option>
         </checkBox>
      </option>
      <option
            defaultValue="false"
            description="Golden reference to be compared with ouput data"
            id="net.sf.orcc.simulators.goldenReference"
            name="Golden Reference">
         <checkBox>
            <option
                  description="Golden reference file to be compared"
                  id="net.sf.orcc.simulators.goldenReferenceFile"
                  name="Golden Reference File">
               <browseFile
                     folder="false"
                     workspace="false">
               </browseFile>
            </option>
         </checkBox>
      </option>
      <option
            description="Input data to be pushed to the CAL network we want to simulate"
            id="net.sf.orcc.simulators.inputStimulus"
            name="Input stimulus">
         <browseFile
               folder="false"
               workspace="false">
         </browseFile>
      </option>
   </extension>
   <extension
         point="net.sf.orcc.simulators.simulators">
      <simulator
            class="net.sf.orcc.simulators.SlowSimulator"
            name="Visitor interpreter and debugger">
         <option
               id="net.sf.orcc.simulators.enableTraces">
         </option>
         <option
               id="net.sf.orcc.core.xdfFile">
         </option>
         <option
               id="net.sf.orcc.simulators.inputStimulus">
         </option>
         <option
               id="net.sf.orcc.simulators.goldenReference">
         </option>
      </simulator>
   </extension>
   <extension
         id="simulator"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="net.sf.orcc.simulators.SimulatorCli">
         </run>
      </application>
   </extension>
</plugin>
