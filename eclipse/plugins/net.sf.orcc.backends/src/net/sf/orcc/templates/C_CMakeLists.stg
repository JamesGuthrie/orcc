printActor(id, actor) ::= <<
<if (!actor.native)
><id>.c
<endif>
>>

printInstance(instance) ::= <<
<if (instance.actor)
><printActor(id=instance.id, actor=instance.actor)><
endif>
>>

CMakeLists(network, options) ::= <<
# Generated from <network.name>

cmake_minimum_required (VERSION 2.6)
project (<network.name>)

# Common packages required
find_library(orcc_LIBRARY orcc)
find_file(orcc_INCLUDE_DIR orcc)

find_package(SDL REQUIRED)
find_package(Threads REQUIRED)

# Common include directories
include_directories(${orcc_INCLUDE_DIR} ${SDL_INCLUDE_DIR})

set(filenames
<network.name>.c
<network.instances: printInstance()>)

add_executable(<network.name> ${filenames})

target_link_libraries(<network.name> ${orcc_LIBRARY} ${SDL_LIBRARY} ${CMAKE_THREAD_LIBS_INIT})

>>
